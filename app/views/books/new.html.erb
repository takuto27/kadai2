<h2>New Book</h2>
<%if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, method: :post do |f| %>

  <div class="field">
    <label>Title</label>
      <%= f.text_field :title %>
  </div>


  <div class="field">
    <label>Body</label>
      <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>

<% end %>